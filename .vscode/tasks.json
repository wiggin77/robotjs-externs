{
    "version": "0.1.0",
    "command": "haxe",
    "showOutput": "always",
    "suppressTaskName": true,
    "echoCommand": true,
    "tasks": [
        {
            "taskName": "build-lib",
            "args": ["build.hxml"]
        },
        {
            "taskName": "build-simple-test",
            "args": ["build-test-simple.hxml"]
        },
        {
            "taskName": "build-vscode-test",
            "args": ["build-test-vscode.hxml"]
        }
    ],
    "problemMatcher": {
        "owner": "haxe",
        "pattern": {
            "regexp": "^(.+):(\\d+): (?:lines \\d+-(\\d+)|character(?:s (\\d+)-| )(\\d+)) : (?:(Warning) : )?(.*)$",
            "file": 1,
            "line": 2,
            "endLine": 3,
            "column": 4,
            "endColumn": 5,
            "severity": 6,
            "message": 7
        }
    }
}


